datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// ========== NEXTAUTH.JS STANDARD TABLES ==========

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String? // Optional: Only used for Credentials Auth
  role          Role      @default(STUDENT)

  accounts Account[]
  sessions Session[]

  // App Specific Relations
  student Student?
  teacher Teacher?
  admin   Admin?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

// ========== APP SPECIFIC (STUDENT/TEACHER) ==========

model Student {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name    String
  city    String
  country String
  email   String

  englishFocus EnglishFocus[]
  bookings     Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("students")
}

model EnglishFocus {
  id        String  @id @default(cuid())
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  focusArea String // e.g., "English Writing"

  @@unique([studentId, focusArea])
  @@map("english_focus")
}

model Teacher {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name    String
  gender  String
  city    String
  country String
  email   String

  specializations TeacherSpecialization[]

  totalEarnings Decimal @default(0) @db.Decimal(10, 2)
  classesBooked Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  availableSlots AvailableSlot[]
  bookings       Booking[]

  @@index([userId])
  @@map("teachers")
}

model TeacherSpecialization {
  id        String  @id @default(cuid())
  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  specialization String

  @@unique([teacherId, specialization])
  @@map("teacher_specializations")
}

model AvailableSlot {
  id        String  @id @default(cuid())
  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  startTime    DateTime
  endTime      DateTime
  slotDuration Int      @default(60)
  hourlyRate   Decimal  @db.Decimal(10, 2)
  isBooked     Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booking Booking?

  @@index([teacherId])
  @@index([isBooked])
  @@map("available_slots")
}

model Booking {
  id        String  @id @default(cuid())
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  slotId String        @unique
  slot   AvailableSlot @relation(fields: [slotId], references: [id], onDelete: Cascade)

  status        BookingStatus @default(CONFIRMED)
  tuitionAmount Decimal       @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payment Payment?

  @@index([studentId])
  @@index([teacherId])
  @@index([slotId])
  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model Payment {
  id        String  @id @default(cuid())
  bookingId String  @unique
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  amount        Decimal       @db.Decimal(10, 2)
  paymentMethod String
  paymentStatus PaymentStatus @default(PENDING)
  transactionId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bookingId])
  @@map("payments")
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Admin {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  email       String
  permissions String[] @default(["view_all", "edit_users", "edit_bookings"])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("admins")
}
